
<% layout('/layouts/boilerplate') %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
            <h3>Create a New Listing</h3>
            <br>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                   <label for="title" class="form-label">Title</label>
                  <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                  <div class="valid-feedback">
                    Title looks good!
                  </div>
                  <div class="invalid-feedback">
                    Title should be valid!
                  </div>
                 </div>
        
                <div class="mb-3">
            
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
                    <!-- <input name="listing[description]" placeholder="enter description" class="form-control"> -->
                </div>
        
                <div class="mb-3">
            
                    <label for="image" class="form-label">Upload Image</label>
                    <input name="listing[image]" placeholder="Add Image" type="file" class="form-control" required>
                </div>


                <div>
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
                </div>
        
                <div class="mb-3">
            
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
                </div>
        
                <br><br>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>
</body>
